import java.util.Scanner;

public class search {
    private Scanner input;

    public search(Scanner input) {
        this.input = input;
    }

    public void searchBooks() {
        while (true) {
            System.out.println("\n=== SEARCH MENU ===");
            System.out.println("1. Search by Book Name");
            System.out.println("2. Search by Author");
            System.out.println("3. Search by Book Category");
            System.out.println("4. Back to Homepage");
            System.out.print("Choose an option: ");

            int choice;
            try {
                choice = Integer.parseInt(input.nextLine());
            } catch (NumberFormatException e) {
                System.out.println("Invalid input. Please enter a number.");
                continue;
            }

            switch (choice) {
                case 1 -> searchByTitle();
                case 2 -> searchByAuthor();
                case 3 -> searchByCategory();
                case 4 -> {
                    return;
                }
                default -> System.out.println("Invalid choice. Try again.");
            }
        }
    }

    private void searchByTitle() {
        System.out.print("Enter book name: ");
        String title = input.nextLine().toLowerCase();
        boolean found = false;

        for (book b : bookcategory.books) {
            if (b.getTitle().toLowerCase().contains(title)) {
                System.out.println("Found: " + b.getTitle() + " by " + b.getAuthor() + " (" + b.getCategory() + ")");
                found = true;
            }
        }

        if (!found) System.out.println("No books found with that name.");
    }

    private void searchByAuthor() {
        System.out.print("Enter author name: ");
        String author = input.nextLine().toLowerCase();
        boolean found = false;

        for (book b : bookcategory.books) {
            if (b.getAuthor().toLowerCase().contains(author)) {
                System.out.println("Found: " + b.getTitle() + " by " + b.getAuthor() + " (" + b.getCategory() + ")");
                found = true;
            }
        }

        if (!found) System.out.println("No books found for that author.");
    }

    private void searchByCategory() {
        System.out.print("Enter book category: ");
        String category = input.nextLine().toLowerCase();
        boolean found = false;

        for (book b : bookcategory.books) {
            if (b.getCategory().toLowerCase().contains(category)) {
                System.out.println("Found: " + b.getTitle() + " by " + b.getAuthor() + " (" + b.getCategory() + ")");
                found = true;
            }
        }

        if (!found) System.out.println("No books found in that category.");
    }
}
